<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:clickable="true"
    >

  <android.support.design.widget.AppBarLayout
      android:id="@+id/account_detail_app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:elevation="@dimen/bar_elevation"
      android:fitsSystemWindows="true"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      app:layout_constraintBottom_toTopOf="@+id/scrollview"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      >

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/account_detail_collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fitsSystemWindows="true"
          android:orientation="vertical"
          app:layout_collapseMode="parallax"
          app:layout_collapseParallaxMultiplier="1.3"
          >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/account_detail_icon_image_view"
            android:layout_width="@dimen/unit_96"
            android:layout_height="@dimen/unit_96"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/unit_40"
            />

        <TextView
            android:id="@+id/account_detail_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:textColor="@color/white"
            android:textSize="@dimen/unit_16_text"
            tools:text="Google"
            />

        <TextView
            android:id="@+id/account_detail_username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:textColor="@color/whiteGrey"
            android:textSize="@dimen/unit_12_text"
            tools:text="myki@gmail.com"
            style="@style/TextAppearance.AppCompat.Body1"
            />

      </LinearLayout>

    </android.support.design.widget.CollapsingToolbarLayout>

  </android.support.design.widget.AppBarLayout>

  <android.support.v4.widget.NestedScrollView
      android:id="@+id/scrollview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fillViewport="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/account_detail_app_bar_layout"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/unit_56"
        android:paddingTop="@dimen/spacing_small"
        >

      <android.support.v7.widget.CardView
          android:id="@+id/ad_account_info_nickname_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/spacing_small"
          android:layout_marginEnd="@dimen/spacing_medium"
          android:layout_marginStart="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_small"
          app:cardBackgroundColor="@color/colorPrimary"
          app:cardCornerRadius="@dimen/unit_4"
          app:cardElevation="@dimen/spacing_medium"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/spacing_large"
              android:layout_marginStart="@dimen/spacing_large"
              android:layout_marginTop="@dimen/spacing_small"
              android:text="@string/nickname"
              android:textAppearance="@style/TextAppearance.AppCompat.Body1"
              android:textColor="@color/lightWhite"
              />

          <TextView
              android:id="@+id/ad_account_info_nickname_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/spacing_medium"
              android:layout_marginEnd="@dimen/spacing_large"
              android:layout_marginStart="@dimen/spacing_large"
              tools:text="Potato"
              style="@style/Subhead"
              />

        </LinearLayout>

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:id="@+id/ad_account_info_username_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/spacing_small"
          android:layout_marginEnd="@dimen/spacing_medium"
          android:layout_marginStart="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_small"
          app:cardBackgroundColor="@color/colorPrimary"
          app:cardCornerRadius="@dimen/unit_4"
          app:cardElevation="@dimen/spacing_medium"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/spacing_large"
              android:layout_marginStart="@dimen/spacing_large"
              android:layout_marginTop="@dimen/spacing_small"
              android:text="@string/username"
              android:textAppearance="@style/TextAppearance.AppCompat.Body1"
              android:textColor="@color/lightWhite"
              />

          <TextView
              android:id="@+id/ad_account_info_username_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/spacing_medium"
              android:layout_marginEnd="@dimen/spacing_large"
              android:layout_marginStart="@dimen/spacing_large"
              tools:text="myki@gmail.com"
              style="@style/Subhead"
              />


        </LinearLayout>

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/spacing_small"
          android:layout_marginEnd="@dimen/spacing_medium"
          android:layout_marginStart="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_small"
          app:cardBackgroundColor="@color/colorPrimary"
          app:cardCornerRadius="@dimen/unit_4"
          app:cardElevation="@dimen/spacing_medium"
          >


        <LinearLayout
            android:id="@+id/ad_account_info_password_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/spacing_large"
              android:layout_marginStart="@dimen/spacing_large"
              android:layout_marginTop="@dimen/spacing_small"
              android:text="@string/password"
              android:textAppearance="@style/TextAppearance.AppCompat.Body1"
              android:textColor="@color/lightWhite"
              />

          <TextView
              android:id="@+id/ad_account_info_password_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/spacing_medium"
              android:layout_marginEnd="@dimen/spacing_large"
              android:layout_marginStart="@dimen/spacing_large"
              android:text="@string/hold_to_reveal_password"
              style="@style/Subhead"
              />

        </LinearLayout>


      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:id="@+id/ad_account_info_domain_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/spacing_small"
          android:layout_marginEnd="@dimen/spacing_medium"
          android:layout_marginStart="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_small"
          app:cardBackgroundColor="@color/colorPrimary"
          app:cardCornerRadius="@dimen/unit_4"
          app:cardElevation="@dimen/spacing_medium"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/spacing_large"
              android:layout_marginStart="@dimen/spacing_large"
              android:layout_marginTop="@dimen/spacing_small"
              android:text="@string/website"
              android:textAppearance="@style/TextAppearance.AppCompat.Body1"
              android:textColor="@color/lightWhite"
              />

          <TextView
              android:id="@+id/ad_account_info_domain_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/spacing_medium"
              android:layout_marginEnd="@dimen/spacing_large"
              android:layout_marginStart="@dimen/spacing_large"
              android:textColor="@color/white"
              tools:text="https://google.com"
              style="@style/Subhead"
              />

        </LinearLayout>

      </android.support.v7.widget.CardView>


    </LinearLayout>

  </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>